<Window x:Class="MyStore.WpfApp.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="260" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="0,0,8,8"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameBox" MaxLength="40" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Category:" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CategoryBox" DisplayMemberPath="CategoryName" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Units In Stock:" Margin="0,0,8,8"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="StockBox" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Unit Price:" Margin="0,0,8,8"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="PriceBox" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
    
</Window>
