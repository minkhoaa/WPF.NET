<Window x:Class="MyStore.Wpf.Views.WindowProductManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- Left form -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Product ID" Margin="0,0,0,4"/>
            <TextBox x:Name="txtProductId" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Product Name" Margin="0,0,0,4"/>
            <TextBox x:Name="txtProductName" Margin="0,0,0,10"/>

            <TextBlock Text="Category" Margin="0,0,0,4"/>
            <ComboBox x:Name="cboCategory" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId" Margin="0,0,0,10"/>

            <TextBlock Text="Units In Stock" Margin="0,0,0,4"/>
            <TextBox x:Name="txtUnitsInStock" Margin="0,0,0,10"/>

            <TextBlock Text="Unit Price" Margin="0,0,0,4"/>
            <TextBox x:Name="txtUnitPrice" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0" >
                <Button x:Name="btnLoad" Content="Load" Width="80" Margin="0,0,10,0" Click="btnLoad_Click"/>
                <Button x:Name="btnInsert" Content="Insert" Width="80" Margin="0,0,10,0" Click="btnInsert_Click"/>
                <Button x:Name="btnUpdate" Content="Update" Width="80" Margin="0,0,10,0" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Delete" Width="80" Margin="0,0,10,0" Click="btnDelete_Click"/>
                <Button x:Name="btnClose" Content="Close" Width="80" Click="btnClose_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Right list -->
        <DataGrid x:Name="dgProducts"
                  Grid.Column="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="dgProducts_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="*"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="2*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Units In Stock" Binding="{Binding UnitsInStock}" Width="*"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

